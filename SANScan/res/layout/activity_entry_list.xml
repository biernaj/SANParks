<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entry_list"
    android:name="com.sanparks.sanscan.EntryListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context="com.example.sanscan.EntryListActivity"
    tools:layout="@android:layout/list_content" >

    <fragment
        android:id="@+id/listEntry"
        android:name="com.sanparks.sanscan.EntryListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout="@android:layout/simple_list_item_activated_1" />

    <Button
        android:id="@+id/add_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="cmdAddNewEntry"
        android:text="@string/title_add_new_entry" />

</RelativeLayout>
